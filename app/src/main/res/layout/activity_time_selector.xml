<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tr.edu.iyte.ca_arbac.TimeSelector"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET TIME RANGE"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:background="@android:color/holo_blue_bright"/>
    </FrameLayout>
    <Button
        android:id="@+id/timeButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set the starting Time"
        android:background="@android:color/holo_purple"
        android:layout_marginTop="5dp">
    </Button>
    <Button
        android:id="@+id/timeButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set the end Time"
        android:background="@android:color/holo_green_dark"
        android:layout_marginTop="5dp">
    </Button>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT DAYS"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:background="@android:color/holo_blue_bright"/>
    </FrameLayout>
       <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/android:list"
           android:layout_weight="1">
             </ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/SaveTimeButton"
        android:onClick="returnSelectedTime"
        android:background="@android:color/holo_blue_bright"
        android:text="Save"/>
   </LinearLayout>

